REM Add all Django project files
echo ğŸ”„ Adding Django project files...
git add manage.py
git add requirements.txt
git add runtime.txt
git add *.md
git add *.py

REM Add app directories
echo ğŸ”„ Adding Django apps...
git add accounts/
git add chat/
git add genai_project/

REM Add templates and static files (source, not generated)
echo ğŸ”„ Adding templates...
git add templates/

echo ğŸ”„ Adding static source files...
git add static/

REM Add documentation and configuration
git add *.sh
git add *.yaml
